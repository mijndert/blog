---
pagination:
  data: collections.tagsList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/index.html
layout: layouts/page.html
---

<h1>Posts tagged with "{{ tag }}"</h1>
<ul>
  {% for post in collections.posts | filterByTag(tag) %}
    <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
  {% endfor %}
</ul>